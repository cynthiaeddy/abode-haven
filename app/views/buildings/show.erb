<div class='individual bldg'>
  <ul>

    <h2><%=@building.name%></h2>

    Elevator:
    <%=yesno(@building.elevator)%><br>
    Pets allowed:
    <%= @building.pets%><br>
    Available apartments in building:
    <%=@building.apartments.count%><br>
    <div class='lone bldg'>
      <%@building.apartments.each do |apartment|%>
        <%=link_to apartment.apt_num, apartment_path(apartment) %>
        <br>
      <% end %><br><br>
    </div>

    <% if current_user && current_user.admin %>
      <h4><%= link_to 'create new apartment', new_apartment_path %><br>
        <%= link_to 'update '+ @building.name, edit_building_path %><br>
        <%= link_to 'delete '+ @building.name, building_path, method: :delete, data: { confirm: 'are u sure?' } %><br>
        <%= link_to 'sign out', destroy_user_session_path, method: :delete %></h4><br>
    <% end%>

    <div class='back_button_bldg'>
      <%= link_to 'back to buildings', buildings_path %>
    </div>
  </ul>
</div>
